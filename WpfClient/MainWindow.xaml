<Window x:Class="WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Eaton MCB – Iniciar sesión"
        Height="600" Width="520"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FB"
        FontFamily="Segoe UI">

    <Window.Resources>
        <!-- Paleta -->
        <Color x:Key="PrimaryColor">#4F46E5</Color>
        <Color x:Key="PrimaryDark">#4338CA</Color>
        <Color x:Key="TextColor">#1F2937</Color>
        <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
        <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDark}"/>
        <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
        <SolidColorBrush x:Key="CardBrush" Color="White"/>
        <SolidColorBrush x:Key="BorderBrushSoft" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="HintBrush" Color="#9CA3AF"/>

        <!-- Botón primario -->
        <Style TargetType="Button" x:Key="PrimaryButton">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" CornerRadius="10" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="{StaticResource PrimaryDarkBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#2F2FA5"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Background" Value="#D1D5DB"/>
                                <Setter Property="Foreground" Value="#6B7280"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Botón secundario -->
        <Style TargetType="Button" x:Key="SecondaryButton" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrushSoft}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" CornerRadius="10" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource PrimaryDarkBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Chrome de inputs -->
        <Style TargetType="Border" x:Key="InputBoxChrome">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Background" Value="#FBFBFD"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrushSoft}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
        </Style>

        <!-- TextBox redondeado con placeholder -->
        <Style TargetType="TextBox" x:Key="RoundedTextBox">
            <Setter Property="Height" Value="44"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <Border x:Name="chrome" Style="{StaticResource InputBoxChrome}"/>
                            <ScrollViewer x:Name="PART_ContentHost" Margin="10,8,10,8"/>
                            <TextBlock x:Name="Placeholder" Margin="12,0,12,0"
                                       VerticalAlignment="Center" Foreground="{StaticResource HintBrush}"
                                       Text="{TemplateBinding Tag}" IsHitTestVisible="False" Visibility="Collapsed"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                <Setter TargetName="chrome" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                <Setter TargetName="chrome" Property="Background" Value="White"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Text" Value=""/>
                                    <Condition Property="IsKeyboardFocusWithin" Value="False"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Placeholder" Property="Visibility" Value="Visible"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- PasswordBox redondeado -->
        <Style TargetType="PasswordBox" x:Key="RoundedPasswordBox">
            <Setter Property="Height" Value="44"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Grid>
                            <Border x:Name="chrome" Style="{StaticResource InputBoxChrome}"/>
                            <ScrollViewer x:Name="PART_ContentHost" Margin="10,8,10,8"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                <Setter TargetName="chrome" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                <Setter TargetName="chrome" Property="Background" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Link -->
        <Style TargetType="TextBlock" x:Key="LinkText">
            <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="TextDecorations" Value="Underline"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Border Width="440" Padding="32" Background="{StaticResource CardBrush}" CornerRadius="14"
                BorderBrush="{StaticResource BorderBrushSoft}" BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="#1F2937" BlurRadius="18" ShadowDepth="0" Opacity="0.12"/>
            </Border.Effect>

            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,4,0,22">
                    <Ellipse Width="34" Height="34" Fill="{StaticResource PrimaryBrush}"/>
                    <StackPanel Margin="12,0,0,0">
                        <TextBlock Text="Eaton MCB" Foreground="{StaticResource TextBrush}"
                                   FontSize="20" FontWeight="Bold"/>
                        <TextBlock Text="Iniciar sesión" Foreground="{StaticResource HintBrush}" FontSize="12"/>
                    </StackPanel>
                </StackPanel>

                <TextBox x:Name="UserBox" Style="{StaticResource RoundedTextBox}"
                         Tag="Usuario o correo" Margin="0,0,0,12"/>

                <PasswordBox x:Name="PassBox" Style="{StaticResource RoundedPasswordBox}"
                             Margin="0,0,0,20"/>

                <UniformGrid Columns="2">
                    <Button Content="Entrar" Height="46" Style="{StaticResource PrimaryButton}"
                            Margin="0,0,8,0" Click="Login_Click"/>
                    <Button Content="Crear usuario" Height="46" Style="{StaticResource SecondaryButton}"
                            Margin="8,0,0,0" Click="OpenRegister_Click"/>
                </UniformGrid>

                <TextBlock Text="Olvidé mi usuario o contraseña" Style="{StaticResource LinkText}"
                           Margin="0,16,0,0" MouseLeftButtonUp="Forgot_Click"/>

                <TextBlock x:Name="Msg" Foreground="#B91C1C" Margin="0,12,0,0" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>


