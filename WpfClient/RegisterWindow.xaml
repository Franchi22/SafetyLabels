<Window x:Class="WpfClient.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Eaton MCB – Crear usuario"
        Height="560" Width="520"
        WindowStartupLocation="CenterOwner"
        Background="#F5F7FB"
        FontFamily="Segoe UI"
        ResizeMode="NoResize">
    <Window.Resources>
        <SolidColorBrush x:Key="Primary" Color="#4F46E5"/>
        <SolidColorBrush x:Key="BorderSoft" Color="#E5E7EB"/>
        <Style TargetType="Border" x:Key="InputChrome">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Background" Value="#FBFBFD"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderSoft}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
        <Style TargetType="TextBox" x:Key="RoundedTB">
            <Setter Property="Height" Value="42"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <Border x:Name="c" Style="{StaticResource InputChrome}"/>
                            <ScrollViewer x:Name="PART_ContentHost" Margin="10,8,10,8"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                <Setter TargetName="c" Property="BorderBrush" Value="{StaticResource Primary}"/>
                                <Setter TargetName="c" Property="Background" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="PasswordBox" x:Key="RoundedPB">
            <Setter Property="Height" Value="42"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Grid>
                            <Border x:Name="c" Style="{StaticResource InputChrome}"/>
                            <ScrollViewer x:Name="PART_ContentHost" Margin="10,8,10,8"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                <Setter TargetName="c" Property="BorderBrush" Value="{StaticResource Primary}"/>
                                <Setter TargetName="c" Property="Background" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Button" x:Key="PrimaryBtn">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource Primary}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="46"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10" Padding="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Border Width="440" Padding="28" Background="White" CornerRadius="14"
                BorderBrush="{StaticResource BorderSoft}" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Crear usuario" FontSize="18" FontWeight="Bold" Margin="0,0,0,16"/>
                <TextBlock Text="Usuario (obligatorio)" Margin="0,4,0,6"/>
                <TextBox x:Name="UserBox" Style="{StaticResource RoundedTB}"/>

                <TextBlock Text="Email (recomendado)" Margin="0,12,0,6"/>
                <TextBox x:Name="EmailBox" Style="{StaticResource RoundedTB}"/>

                <TextBlock Text="Contraseña" Margin="0,12,0,6"/>
                <PasswordBox x:Name="PassBox" Style="{StaticResource RoundedPB}"/>

                <TextBlock Text="Confirmar contraseña" Margin="0,12,0,6"/>
                <PasswordBox x:Name="ConfirmBox" Style="{StaticResource RoundedPB}"/>

                <StackPanel Orientation="Horizontal" Margin="0,18,0,0">
                    <Button Content="Crear" Width="140" Style="{StaticResource PrimaryBtn}" Click="Create_Click"/>
                    <Button Content="Cancelar" Width="120" Margin="12,0,0,0" Click="Cancel_Click"/>
                </StackPanel>

                <TextBlock x:Name="Msg" Foreground="#B91C1C" Margin="0,12,0,0" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
